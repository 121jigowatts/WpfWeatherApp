<Window x:Class="WpfWeatherApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="230.851" Width="285.461">
    <Grid HorizontalAlignment="Left" Height="199"  VerticalAlignment="Top" Width="275">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding TodayWeatherModel.DateLabel}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="{Binding TodayWeatherModel.Date}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="{Binding TodayWeatherModel.Telop}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" Text="{Binding TodayWeatherModel.TemperatureMax}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="{Binding TodayWeatherModel.TemperatureMin}" VerticalAlignment="Top"/>
    </Grid>
</Window>
